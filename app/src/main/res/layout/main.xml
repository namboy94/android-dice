<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar">

    <include layout="@layout/settingsbutton">
    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

        <net.namibsun.dice.views.HorizontalSquareView
            android:id="@+id/die"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dice6"
            android:contentDescription="@string/dice_content_description"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </View>

    </LinearLayout>

    <include layout="@layout/modeswitcherbar">
    </include>

</RelativeLayout>