<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar">

    <include layout="@layout/settingsbutton">
    </include>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/topdie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/classic_6"
            android:layout_margin="10dp"
            android:contentDescription="@string/dice_content_description"/>


        <ImageView
            android:id="@+id/bottomdie"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="10dp"
            android:src="@drawable/classic_6"
            android:contentDescription="@string/dice_content_description"/>

    </LinearLayout>

    <include layout="@layout/modeswitcherbar">
    </include>

</RelativeLayout>