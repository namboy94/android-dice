<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@android:style/Theme.NoTitleBar">

    <include layout="@layout/settingsbutton">
    </include>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="100dp"
        android:orientation="vertical">

        <net.namibsun.dice.views.VerticalSquareView
            android:id="@+id/topdie"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/dice6"
            android:contentDescription="@string/dice_content_description"/>


        <net.namibsun.dice.views.VerticalSquareView
            android:id="@+id/bottomdie"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/dice6"
            android:contentDescription="@string/dice_content_description"/>

    </LinearLayout>

    <include layout="@layout/modeswitcherbar">
    </include>

</RelativeLayout>