<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background">

    <CheckBox
        android:id="@+id/vibrate_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Vibrate"/>

    <CheckBox
        android:id="@+id/wiggle_animation_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Wiggle Animation" />

    <CheckBox
        android:id="@+id/change_animation_check"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Switcher Animation" />

    <RadioGroup
        android:id="@+id/style_select_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <RadioButton
            android:id="@+id/classic_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="CLASSIC"
            android:text="Classic"/>
        <RadioButton
            android:id="@+id/red_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="RED"
            android:text="Red"/>
        <RadioButton
            android:id="@+id/blue_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="BLUE"
            android:text="Blue"/>
    </RadioGroup>


    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="OK"/>



</LinearLayout>