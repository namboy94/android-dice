<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/background">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/vibrate_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text="@string/vibrate_option"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/wiggle_animation_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/wiggle_animation_option" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <CheckBox
            android:id="@+id/change_animation_check"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/switcher_animation_option" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/style_select_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/theme_settings_title"/>
            <RadioButton
                android:id="@+id/classic_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="CLASSIC"
                android:text="@string/classic_theme_option"/>
            <RadioButton
                android:id="@+id/red_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="RED"
                android:text="@string/red_theme_option"/>
            <RadioButton
                android:id="@+id/blue_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="BLUE"
                android:text="@string/blue_theme_option"/>
        </RadioGroup>

    </android.support.v7.widget.CardView>



    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/ok_button_text"/>



</LinearLayout>