<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/Background">

    <android.support.v7.widget.CardView
        style="@style/SettingsCard">

        <CheckBox
            style="@style/MatchParent"
            android:id="@+id/vibrate_check"
            android:text="@string/vibrate_option"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/SettingsCard">

        <CheckBox
            style="@style/MatchParent"
            android:id="@+id/wiggle_animation_check"
            android:text="@string/wiggle_animation_option" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/SettingsCard">

        <CheckBox
            style="@style/MatchParent"
            android:id="@+id/change_animation_check"
            android:text="@string/switcher_animation_option" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/SettingsCard"
        android:layout_weight="1"
        android:layout_marginBottom="0dp">

        <RadioGroup
            android:id="@+id/style_select_group"
            android:orientation="horizontal"
            android:gravity="center"
            style="@style/MatchParent">
            <TextView
                style="@style/WrapContent"
                android:layout_marginRight="10dp"
                android:layout_marginEnd="10dp"
                android:text="@string/theme_settings_title"/>
            <RadioButton
                style="@style/WrapContent"
                android:id="@+id/classic_style"
                android:tag="CLASSIC"
                android:text="@string/classic_theme_option"/>
            <RadioButton
                style="@style/WrapContent"
                android:id="@+id/red_style"
                android:tag="RED"
                android:text="@string/red_theme_option"/>
            <RadioButton
                style="@style/WrapContent"
                android:id="@+id/blue_style"
                android:tag="BLUE"
                android:text="@string/blue_theme_option"/>
        </RadioGroup>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/ok_button_text"/>

</LinearLayout>
