<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <style name="MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Background">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/background</item>
        <item name="android:theme">@android:style/Theme.Light.NoTitleBar</item>
    </style>

    <style name="SettingsCard">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="RiskDie">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/die_5</item>
    </style>

    <style name="ModeSwitcherButton">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="RangeEditBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1.5</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:text">0</item>
    </style>

    <style name="OneDieImage">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:src">@drawable/die_5</item>
    </style>

    <style name="TextDieImage">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/text_die_font</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/die_base</item>
        <item name="android:text">@string/text_die_start_value</item>
    </style>

    <style name="TextDieRangeCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
    </style>

    <style name="DoubleDiceFrame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">100dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="DoubleDiceImage">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:src">@drawable/die_5</item>
    </style>

    <style name="LotteryDie">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/text_die_font</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/die_base_round</item>
        <item name="android:text">@string/text_die_start_value</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <!--item name="android:layout_gravity">1</item-->
        <item name="android:textSize">30sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

</resources>
