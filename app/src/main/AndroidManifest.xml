<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.namibsun.dice" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SettingsActivity"/>
        <activity android:name=".activities.TwoDiceActivity"/>
        <activity android:name=".activities.RiskDiceActivity"/>
        <activity android:name=".activities.TextDieActivity"/>
        <activity android:name=".activities.LotteryActivity"/>
    </application>

</manifest>
