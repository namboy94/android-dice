<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.namibsun.android.dice.TwoDiceActivity">

    <ImageView
            android:clickable="true"
            android:onClick="rollDice"
            android:id="@+id/dice_image"
            android:src="@drawable/diceone500"
            android:layout_width="167dp"
            android:layout_height="228dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="120dp"/>

    <ImageView
            android:clickable="true"
            android:onClick="rollDice"
            android:id="@+id/dice2_image"
            android:src="@drawable/dicefive500"
            android:layout_width="167dp"
            android:layout_height="228dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:layout_marginTop="120dp"/>
</GridLayout>
